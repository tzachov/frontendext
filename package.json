{
    "name": "frontendext",
    "displayName": "Front End Extension",
    "description": "",
    "version": "0.0.5",
    "publisher": "TzachOvadia",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other",
        "Extension Packs"
    ],
    "preview": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/tzachov/frontendext"
    },
    "activationEvents": [
        "workspaceContains:.angular-cli.json",
        "workspaceContains:angular-cli.json"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.createComponent",
                "title": "New component"
            },
            {
                "command": "extension.addTestMethod",
                "title": "Add test method"
            },
            {
                "command": "extension.formatJson",
                "title": "Format JSON"
            },
            {
                "command": "extension.createBarrel",
                "title": "Create Barrel"
            }

        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.createComponent",
                    "group": "Angular@1",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "extension.createBarrel",
                    "when": "explorerResourceIsFolder"
                }
            ],
            "editor/context": [
                {
                    "command": "extension.addTestMethod",
                    "when": "resourceLangId == typescript"
                },
                {
                    "command": "extension.formatJson"
                }
            ]
        },
        "keybindings": {
            "command": "extension.createComponent",
            "key": "alt+shift+c"
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "jsonlint": "^1.6.2",
        "strip-json-comments": "^2.0.1"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}